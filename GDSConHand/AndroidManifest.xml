<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.winjune.wifiindoor"
    android:versionCode="17"
    android:versionName="1.8.1" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <permission
        android:name="com.winjune.wifiindoor.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.winjune.wifiindoor.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- Set minSdkVersion=10 to support NFC, set targetSdkVersion=16 to support MENU button -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />
    
	<supports-screens 
	    android:largeScreens="true"
       	android:normalScreens="true" 
       	android:smallScreens="false"
       	android:anyDensity="true"></supports-screens>    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:largeHeap="true" 
        android:hardwareAccelerated="true">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- License for Google Map API V2 -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAPmvIlhYbzd_39CL45Qi3FGmxzF47ki_Y" />

        <activity
            android:name="com.winjune.wifiindoor.activity.StartupActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.GMapEntryActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />

                <meta-data
                    android:name="android.nfc.action.TECH_DISCOVERED"
                    android:resource="@xml/nfc_tech_filter" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.MenuEntryActivityyActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.MapSelectorActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.MapLocatorActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <!-- android:screenOrientation="sensor" -->
        <activity
            android:name="com.winjune.wifiindoor.activity.MapViewerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:largeHeap="@bool/largeheap"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />

                <meta-data
                    android:name="android.nfc.action.TECH_DISCOVERED"
                    android:resource="@xml/nfc_tech_filter" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.QrScannerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.TunerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.SettingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.InfoPusherActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.NaviResultActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.InterestPlaceViewerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.InterestPlaceTTSViewerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.InterestPlaceWebViewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.GuideActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.PlaceSearcherActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.ShortcutEntryActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.LabelSearchActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.RouteMainctivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.RouteInputActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.BusMapActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.BusStationInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.UserCenterActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.TheatreInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.MovieInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.EventViewerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.RestaurantInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.winjune.wifiindoor.activity.BusLineInfoActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.winjune.wifiindoor.activity.RestaurantMenuDetailActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:parentActivityName="com.winjune.wifiindoor.activity.RestaurantInfoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.winjune.wifiindoor.activity.MenuItemListActivity" />
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.PlayhouseInfoActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.winjune.wifiindoor.activity.AlarmActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>

