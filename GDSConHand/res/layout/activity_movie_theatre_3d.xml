<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#AAAAAA"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/surrounding_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAAAAA"
        android:paddingBottom="1dp" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:background="#C0C0C0"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/go_there"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@id/btn_back"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#C0C0C0"
            android:gravity="center"
            android:text="去这里"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/btn_back"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/go_there"
            android:layout_toRightOf="@id/btn_back"
            android:background="#C0C0C0"
            android:gravity="center"
            android:text="3D巨幕影院"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#AAAAAA"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_cinema_3d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="影院简介:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_cinema_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="3D巨幕影院屏幕宽29米、高22米，是目前亚洲地区最大的巨幕影院，可容纳610名观众同时体验。其放映设备采用当今世界上技术含量最高、画格最大的70毫米15齿孔IMAX立体放映系统，它使用的70毫米15齿孔胶片有效画幅是普通35毫米胶片的10倍，它独特的“波形环状”输片设计，把每一个画格牢牢地吸附在片门之上，使画面清晰稳定。"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_film_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="影片列表:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
            <!-- 定义一个Gallery组件 -->

            <Gallery
                android:id="@+id/gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:spacing="1pt"
                android:unselectedAlpha="0.6" />

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#AAAAAA"
                android:orientation="vertical" >

                <!-- 直接添加按钮，它自己会占一行 -->

                <TextView
                    android:id="@+id/text_film_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:text="影片简介(票价50元):"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text_film_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:text="北极熊"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/btn_today"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="1dp"
                        android:background="#C0C0C0"
                        android:text="今日4月10日"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/btn_tomorrow"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="#E0E0E0"
                        android:text="明日4月11日"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="09:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#AA0000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_complete_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="10:59结束"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/set_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:text="设置提醒" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="11:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#AA0000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="12:59结束"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ok2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:text="设置提醒" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="13:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#AA0000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="14:59结束"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ok2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:text="设置提醒" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="15:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#AA0000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="16:59结束"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/ok2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="#FFFFFF"
                        android:text="设置提醒" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>