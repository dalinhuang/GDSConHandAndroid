<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/event_list" 
	android:layout_width="fill_parent" 	 
	android:layout_height="wrap_content"
	android:background = "@color/white">    

	<ImageView
	    android:id="@+id/list_event_child_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft = "10dp"
		android:padding="6dp"	    	    
	    android:src="@drawable/icon_space_dreams" />    
    
    <RelativeLayout		
		android:layout_width="wrap_content" 	 
		android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_event_child_icon"
        android:layout_alignTop="@id/list_event_child_icon"		
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@id/list_event_child_icon"
		android:orientation="vertical" > 
		
	    <TextView
	        android:id="@+id/EventTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="6dp"
	        android:layout_alignParentTop="true"	        
	        android:text="Event Title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
		<TextView 
		    android:id="@+id/EventInfo"			
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_alignParentBottom="true"
			android:paddingBottom="6dp"
			android:text="Event Info" 						
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_event_child_icon"
        android:layout_alignTop="@id/list_event_child_icon"
        android:layout_alignParentRight="true"        
        android:layout_marginRight="15dp"        
        android:src="@drawable/icon_next" />    
    
</RelativeLayout>
