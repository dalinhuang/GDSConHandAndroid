<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#777777" >

        <RelativeLayout
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="45dip"
                android:background="@color/grey_light_light"
                android:clickable="true"
                android:contentDescription="@null"
                android:gravity="center"
                android:onClick="backClick"
                android:src="@drawable/btn_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_left"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="65dip"
                android:layout_height="fill_parent"
                android:background="@color/grey_light_light"
                android:drawableLeft="@drawable/mapicon"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="地图"
                android:textColor="#0000FF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/btn_right"
            android:layout_alignTop="@+id/btn_right"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/btn_right"
            android:layout_toRightOf="@+id/btn_left"
            android:background="@color/grey_light_light" >

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/grey_light_light"
                android:gravity="center"
                android:text="详  情"
                android:textColor="#333333"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/bustxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:paddingLeft="10dip"
        android:paddingTop="15dip"
        android:text="大学城科学中心总站"
        android:textColor="#222222"
        android:textSize="16.0sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_toRightOf="@+id/bustxt1"
        android:paddingTop="15dip"
        android:text="—公交车站"
        android:textColor="#33A1C9"
        android:textSize="16.0sp" />

    <RelativeLayout
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bustxt1"
        android:layout_marginTop="5dip"
        android:background="#dddddd" >

       

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#dddddd"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="10.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TableLayout
                            android:id="@+id/MorePageTableLayout_Follow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1.0dip"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/more_page_row1"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itemtop_press"
                                android:paddingBottom="16.0dip"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    android:text="沿途公交"
                                    android:textColor="#aa333333"
                                    android:textSize="14.0sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/more_page_row2"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itemmiddle_press"
                                android:paddingBottom="16.0dip"
                                android:clickable="true"
                                android:onClick="enterBusstop383"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10.0dip"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    android:text="383路(大学城科学中心总站-长洲码头总站) "
                                    android:textColor="#ff333333"
                                    android:textSize="14.0sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/more_page_row3"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itemmiddle_press"
                                android:paddingBottom="16.0dip"
                                android:clickable="true"
                                android:onClick="enterBusstop801"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10.0dip"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    android:text="801路(大学城科学中心总站-体育中心总站) "
                                    android:textColor="#ff333333"
                                    android:textSize="14.0sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/more_page_row4"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itembottom_press"
                                android:clickable="true"
                                android:onClick="enterBusstop202"
                                android:paddingBottom="16.0dip"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10.0dip"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    android:text="番202路(大学城科学中心总站-大学城体..."
                                    android:textColor="#ff333333"
                                    android:textSize="14.0sp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        
    </RelativeLayout>

    <TextView
        android:id="@+id/bustxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fav"
        android:paddingLeft="10dip"
        android:paddingTop="15dip"
        android:text="大学城科学中心"
        android:textColor="#222222"
        android:textSize="16.0sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bustxt2"
        android:layout_alignTop="@+id/bustxt2"
        android:paddingTop="15dip"
        android:text="—公交车站"
        android:textColor="#33A1C9"
        android:textSize="16.0sp" />
    
    
    <RelativeLayout
        android:id="@+id/busroute2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bustxt2"
        android:layout_marginTop="5dip"
        android:background="#dddddd" >

       

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#dddddd"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="5.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TableLayout
                            android:id="@+id/MorePageTableLayout_Follow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1.0dip"
                            android:shrinkColumns="0"
                            android:stretchColumns="0" >

                            <TableRow
                                android:id="@+id/more_page_row1"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itemtop_press"
                                
                                android:paddingBottom="16.0dip"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    
                                    android:text="沿途公交"
                                    android:textColor="#aa333333"
                                    android:textSize="14.0sp" />
                            </TableRow>

                           

                            <TableRow
                                android:id="@+id/more_page_row4"
                                android:layout_width="fill_parent"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:background="@drawable/more_itembottom_press"
                                android:paddingBottom="16.0dip"
                                android:clickable="true"
                                android:onClick="enterBusstop5"
                                android:paddingTop="16.0dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10.0dip"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="17.0dip"
                                    
                                    android:text="节假日公交专线5路(体育中心总站-长洲..."
                                    android:textColor="#ff333333"
                                    android:textSize="14.0sp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>